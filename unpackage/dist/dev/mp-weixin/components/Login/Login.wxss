.login_container {
  width: 600rpx;
  background-color: #fff;
  border-radius: 32rpx;
  box-shadow: rgba(149, 157, 165, 0.2) 0px 8px 24px;
  padding: 40rpx;
}
.login_container .title {
  text-align: center;
  font-size: 38rpx;
}
.login_container .title .back {
  float: left;
  margin-top: 10rpx;
}
.login_container .text {
  margin: 40rpx 0;
}
.login_container .text text {
  font-size: 20rpx;
  color: #999;
}
.login_container .login_form {
  border-bottom: 1rpx solid #999;
}
.login_container .login_form .login_phone {
  display: flex;
  align-items: center;
}
.login_container .login_form .login_phone .select {
  margin-right: 10rpx;
}
.login_container .login_form .login_phone .select uni-icons {
  margin-left: 10rpx;
}
.login_container .login_form input {
  flex: 1;
}
.login_container .login_btn {
  background-color: #e50113;
  margin: 60rpx 0;
  border-radius: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
}
.login_container .forbidden {
  background-color: #e5011350;
}
.login_container .code_box {
  width: 100%;
  height: 100%;
  background-color: #fff;
  padding-left: 20rpx;
}
.login_container .code_box .code_title {
  height: 80rpx;
  line-height: 80rpx;
}
.login_container .code_box .code_title text {
  vertical-align: middle;
}
.login_container .code_box .code_title .txt {
  margin-left: 20rpx;
}
.login_container .code_box .code_list {
  position: relative;
  height: 100%;
  font-size: 24rpx;
  line-height: 72rpx;
}
.login_container .code_box .code_list .code_list_box {
  height: 100%;
}
.login_container .code_box .code_list .code_list_box .code_list_item_cat {
  font-weight: 700;
}
.login_container .code_box .code_list .code_list_box .code_list_item_code {
  display: flex;
  justify-content: space-between;
}
.login_container .code_box .code_list .code_list_box .code_list_item_code .code {
  margin-right: 40rpx;
  color: #999;
}
::-webkit-scrollbar {
  display: none;
}

