/* 水平间距 */
.desc_box {
  position: relative;
  overflow: hidden;
  background-repeat: no-repeat;
}
.desc_box .bg {
  position: absolute;
  width: 100%;
  height: 100%;
  background-repeat: no-repeat;
  z-index: 1;
}
.desc_box .desc_centent {
  position: relative;
  z-index: 2;
}
.desc_box .desc_centent .desc_cover {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.desc_box .desc_centent .desc_cover .cover_img {
  width: 460rpx;
  height: 460rpx;
  border-radius: 16rpx;
}
.desc_box .desc_centent .desc_cover .title {
  font-size: 34rpx;
  color: #fff;
  margin: 60rpx 0;
}
.desc_box .desc_centent .line {
  height: 1rpx;
  background-image: linear-gradient(to right, transparent, #ccc, transparent);
}
.desc_box .desc_centent .text {
  padding: 0 40rpx;
}
.desc_box .desc_centent .text .tags,
.desc_box .desc_centent .text .introduce {
  margin-top: 44rpx;
  font-size: 24rpx;
  color: #fff;
}

